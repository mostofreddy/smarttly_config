{
    "name": "smarttly/config",
    "type": "library",
    "description": "Component that allows to load, combine and access in an easy way the configuration data of an application",
    "license": "MIT",
    "version": "1.0.0",
    "homepage": "https://mostofreddy.github.io/smarttly_config",
    "keywords": [
        "config",
        "configuration",
        "php",
        "ini",
        "yaml",
        "xml",
        "json",
        "unframework",
        "settings"
    ],
    "authors": [
        {
            "name": "Federico Lozada Mosto",
            "email": "mosto.federico@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0"
    },
    "require-dev": {
        "phpunit/phpunit": "7.3.*",
        "squizlabs/php_codesniffer": "3.3.*",
        "php-coveralls/php-coveralls": "2.1.*",
        "codedungeon/phpunit-result-printer": "0.20.*"
    },
    "autoload": {
        "psr-4": {
            "Smarttly\\Config\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Smarttly\\Config\\Test\\": "tests/src/"
        }
    },
    "scripts": {
        "ci": [
            "@phpunit",
            "@phpcs"
        ],
        "phpunit": "phpunit",
        "phpcs": "phpcs  --standard=ruleset.xml"
    },
    "scripts-descriptions": {
        "ci": "Run integration",
        "phpunit": "Run unit testing",
        "phpcs": "Check coding standard"
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "support": {
        "issues": "https://github.com/mostofreddy/smarttly_config/issues"
    }
}
