{
    "name": "smarttly/config",
    "type": "library",
    "description": "Lightweight configuration file loader",
    "license": "MIT",
    "version": "0.1.0",
    "keywords": [
        "config",
        "configuration",
        "php",
        "ini",
        "yaml",
        "xml",
        "json",
        "unframework",
        "settings"
    ],
    "authors": [
        {
            "name": "Federico Lozada Mosto",
            "email": "mosto.federico@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "7.3.*",
        "squizlabs/php_codesniffer": "3.3.*",
        "codedungeon/phpunit-result-printer": "0.19.*",
        "php-coveralls/php-coveralls": "2.1.*"
    },
    "autoload": {
        "psr-4": {
            "Smarttly\\Config\\": "src/",
            "Smarttly\\Config\\Test\\": "tests/src/"
        }
    }
